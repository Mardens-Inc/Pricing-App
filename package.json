		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-router-dom": "^7.1.3",
		"@iconify/react": "^5.2.0"
	},
	"devDependencies": {
		"@types/dom-speech-recognition": "^0.0.4",
		"@types/jquery": "^3.5.32",
		"@types/react": "^19.0.7",
		"@types/react-dom": "^19.0.3",
		"@typescript-eslint/eslint-plugin": "^8.21.0",
		"@typescript-eslint/parser": "^8.21.0",
		"@vitejs/plugin-react": "^4.3.4",
