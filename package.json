{
	"name": "pricing-app",
	"private": true,
	"version": "0.0.0",
	"description": "An updated version of the mardens pricing app",
	"author": "Drew Chase",
	"license": "GPL-3.0-or-later",
	"repository": "https://github.com/Mardens-Inc/Pricing-App",
	"type": "module",
	"scripts": {
		"dev": "node scripts/dev.js",
		"build-api": "wsl cargo build --release",
		"run-api": "cargo run --bin pricing-app",
		"build-frontend": "tsc && vite build",
		"watch-api": "cargo watch -x \"run --bin pricing-app\" -C target/dev-env -N --why -w ../../src-actix",
		"build": "npm run build-frontend && npm run build-api"
	},
	"dependencies": {
		"@dnd-kit/core": "^6.3.1",
